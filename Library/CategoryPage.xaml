<Page x:Class="Library.CategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CategoryPage">

    <Grid Background="AliceBlue">

        <ComboBox x:Name="combobox" Height="50" Margin="133,110,108,290">
            <ComboBoxItem>Romance</ComboBoxItem>
            <ComboBoxItem>Drama</ComboBoxItem>
            <ComboBoxItem>Mystery</ComboBoxItem>
        </ComboBox>

        <Button Height="50" Width="125" Margin="328,309,347,91" Click="Button_Click">Show books</Button>

    </Grid>
</Page>
